{
  "name": "react-ghosta",
  "version": "1.3.3",
  "type": "module",
  "description": "React popup alerts. Lightweight, customizable and beautiful by default.",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "start": "tsup --watch",
    "build": "rm -rf dist && tsup",
    "push": "npm publish",
    "size": "size-limit",
    "prettier": "prettier src --write",
    "tsc": "tsc"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs",
      "default": "./dist/index.cjs"
    },
    "./dist/*": "./dist/*",
    "./package.json": "./package.json"
  },
  "files": [
    "dist"
  ],
  "keywords": [
    "react",
    "alert",
    "popup",
    "modal",
    "ghosta"
  ],
  "author": "Firuzcan HacÄ±yev",
  "repository": "https://github.com/eleviven/react-ghosta",
  "bugs": "https://github.com/eleviven/react-ghosta/issues",
  "homepage": "https://react-ghosta.vercel.app",
  "license": "MIT",
  "size-limit": [
    {
      "path": "dist/index.cjs",
      "limit": "40 KB"
    },
    {
      "path": "dist/index.js",
      "limit": "20 KB"
    }
  ],
  "dependencies": {
    "@headlessui/react": "^1.7.18",
    "class-variance-authority": "^0.7.0"
  },
  "peerDependencies": {
    "react": ">=16",
    "react-dom": ">=16"
  },
  "devDependencies": {
    "@size-limit/preset-small-lib": "^11.0.2",
    "@types/node": "^20.11.17",
    "@types/react": "^18.2.45",
    "@types/react-dom": "^18.2.18",
    "husky": "^9.0.10",
    "prettier": "^3.2.5",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "size-limit": "^11.0.2",
    "tsup": "^8.0.2",
    "typescript": "^5.3.3"
  }
}
